        <label for="id">ID</label>
        <input type="number" name="id" id="id" value="<%= id %>" disabled>
    </div>
    <input type="number" name="id" id="id" value="<%= id %>" style="display: none;" required>
    <div>
        <label for="nom">Nom</label>
        <input type="text" name="nom" id="nom" value="<%= nom %>" required>
    </div>
    <div>
        <label for="nbHeure">Heures</label>
        <input type="number" name="nbHeure" id="nbHeure" value="<%= nbHeure %>" required>
    </div>
    <div>
        <label for="tauxHoraire">Taux Horaire:</label>
        <input type="number" name="tauxHoraire" id="tauxHoraire" value="<%= tauxHoraire %>" required>
